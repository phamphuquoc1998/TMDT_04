@model IEnumerable<TMDT.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



    <input class="form-control" id="myInput" type="text" placeholder="Search..">
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameRec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameRec)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
                </td>
            </tr>
        }</tbody>

</table>
